<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<component>
    <name>SailfishIndex</name>
    <version>0.6.3</version>
    <doc>Builds a perfect hash-based Sailfish index [index] from the Jellyfish database [thash] of the transcripts.</doc>
    <author email="rob.patro@gmail.com">Rob Patro</author>
    <category>NGS analysis</category>
    <category>RNA-Seq analysis</category>
    <category>transcript isoform quantification</category>
    <launcher type="python">
        <argument name="file" value="component.py" />
        <argument name="source" value="krini_functions.py" />
    </launcher>
    <requires URL="http://www.python.org/" name="Python" optional="false" type="manual">python</requires>
    <requires URL="https://github.com/kingsfordgroup/sailfish" name="Sailfish" optional="false" type="manual">sailfish</requires>
    <type-parameters>
        <type-parameter name="FASTA" extends="Text">
            <doc>FASTA file.</doc>
        </type-parameter>
        <type-parameter name="IndexDirSailfish" extends="Directory">
            <doc>Sailfish index directory.</doc>
        </type-parameter>
        <type-parameter name="TranscriptGeneMapSailfish" extends="Text">
            <doc>Sailfish file that maps transcripts to genes.</doc>
        </type-parameter>
    </type-parameters>
    <inputs>
        <input name="INFILE_transcripts" type="FASTA" optional="false" array="false">
            <doc>Transcript FASTA file(s).</doc>
        </input>
        <input name="INFILE_tgmap" type="TranscriptGeneMapSailfish" optional="true" array="false">
            <doc>File that maps transcripts to genes.</doc>
        </input>
    </inputs>
    <outputs>
        <output name="OUTDIR_out" type="IndexDirSailfish" array="false">
            <doc>Output directory for index files.</doc>
        </output>
        <output name="OUTFILE_report" type="Text" array="false">
            <doc>Indexing report/log.</doc>
        </output>
    </outputs>
    <parameters>
        <parameter name="_executable" type="string" default="sailfish --no-version-check index">
            <doc>Path to executable.</doc>
        </parameter>
        <parameter name="_execMode" type="string" default="none">
            <doc>Execution mode. One of &apos;remote&apos;, &apos;local&apos; or &apos;none&apos;.</doc>
        </parameter>
        <parameter name="_cores" type="string" default="16">
            <doc>Number of threads.</doc>
        </parameter>
        <parameter name="_membycore" type="string" default="2G">
            <doc>Memory per core. Integer, optionally followed by one the follow suffixes: K, M, G.</doc>
        </parameter>
        <parameter name="_runtime" type="string" default="6:00:00">
            <doc>Runtime in h:mm:ss.</doc>
        </parameter>
        <parameter name="force" type="string" default="{{FALSE}}">
            <doc>No documentation available.</doc>
        </parameter>
        <parameter name="kmerSize" type="string" default="20">
            <doc>Kmer size.</doc>
        </parameter>
        <parameter name="threads" type="string" default="{{CORES}}">
            <doc>The number of threads to use concurrently.</doc>
        </parameter>
    </parameters>
</component>
