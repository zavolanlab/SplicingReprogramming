<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<component>
    <name>SailfishQuant</name>
    <version>0.6.3</version>
    <doc>Quantifies the abundance of a set of indexed reference transcripts (&apos;sailfish index&apos;) from RNA-seq reads.</doc>
    <author email="rob.patro@gmail.com">Rob Patro</author>
    <category>NGS analysis</category>
    <category>RNA-Seq analysis</category>
    <category>transcript isoform quantification</category>
    <launcher type="python">
        <argument name="file" value="component.py" />
        <argument name="source" value="krini_functions.py" />
    </launcher>
    <requires URL="http://www.python.org/" name="Python" optional="false" type="manual">python</requires>
    <requires URL="https://github.com/kingsfordgroup/sailfish" name="Sailfish" optional="false" type="manual">sailfish</requires>
    <type-parameters>
        <type-parameter name="FASTX" extends="Text">
            <doc>FASTQ or FASTA file.</doc>
        </type-parameter>
        <type-parameter name="IndexDirSailfish" extends="Directory">
            <doc>Sailfish index directory.</doc>
        </type-parameter>
        <type-parameter name="QuantDirSailfish" extends="Directory">
            <doc>Sailfish quantification directory.</doc>
        </type-parameter>
    </type-parameters>
    <inputs>
        <input name="INDIR_index" type="IndexDirSailfish" optional="false" array="false">
            <doc>Sailfish index directory (output of &quot;Sailfish index&quot;).</doc>
        </input>
        <input name="INFILE_unmated_reads" type="FASTX" optional="true" array="false">
            <doc>File containing reads from a single-end RNA-Seq library.</doc>
        </input>
        <input name="INFILE_mates1" type="FASTX" optional="true" array="false">
            <doc>File containing reads from the first mate of a paired-end RNA-Seq library.</doc>
        </input>
        <input name="INFILE_mates2" type="FASTX" optional="true" array="false">
            <doc>File containing reads from the second mate of a paired-end RNA-Seq library.</doc>
        </input>
    </inputs>
    <outputs>
        <output name="OUTDIR_out" type="QuantDirSailfish" array="false">
            <doc>Output directory for quantification files.</doc>
        </output>
        <output name="OUTFILE_report" type="Text" array="false">
            <doc>Quantification report/log.</doc>
        </output>
    </outputs>
    <parameters>
        <parameter name="_executable" type="string" default="sailfish --no-version-check quant">
            <doc>Path to executable.</doc>
        </parameter>
        <parameter name="_execMode" type="string" default="none">
            <doc>Execution mode. One of &apos;remote&apos;, &apos;local&apos; or &apos;none&apos;.</doc>
        </parameter>
        <parameter name="_cores" type="string" default="16">
            <doc>Number of threads.</doc>
        </parameter>
        <parameter name="_membycore" type="string" default="2G">
            <doc>Memory per core. Integer, optionally followed by one the follow suffixes: K, M, G.</doc>
        </parameter>
        <parameter name="_runtime" type="string" default="6:00:00">
            <doc>Runtime in h:mm:ss.</doc>
        </parameter>
        <parameter name="no_bias_correct" type="string" default="{{FALSE}}">
            <doc>Turn off bias correction.</doc>
        </parameter>
        <parameter name="polya" type="string" default="{{FALSE}}">
            <doc>PolyA/polyT k-mers should be discarded.</doc>
        </parameter>
        <parameter name="force" type="string" default="{{FALSE}}">
            <doc>Force the counting phase to rerun, even if a count databse exists.</doc>
        </parameter>
        <parameter name="libtype" type="string" default="TYPE=SE:STRAND=S">
            <doc>Format string describing the library type.</doc>
        </parameter>
        <parameter name="min_abundance" type="string" default="0">
            <doc>Transcripts with an abundance (KPKM) lower than this value will be reported at zero.</doc>
        </parameter>
        <parameter name="iterations" type="string" default="1000">
            <doc>Number of iterations to run the optimzation.</doc>
        </parameter>
        <parameter name="delta" type="string" default="0.0050000000000000001">
            <doc>Consider the optimization to have converged if the relative change in the estimated abundance of all transcripts is below this threshold.</doc>
        </parameter>
        <parameter name="threads" type="string" default="{{CORES}}">
            <doc>The number of threads to use when counting kmers.</doc>
        </parameter>
    </parameters>
</component>
